<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Page8"
             BackgroundColor="White">

    <StackLayout Padding="20">
        <!-- Номер телефона -->
        <Button Text="+7 000 000 00 00" Clicked="ChangePhoneNumber_Clicked" HorizontalOptions="Center" FontSize="18" Margin="0,20,0,0" />

        <!-- Имя -->
        <Button Text="ПОМОГИТЕ (ИМЯ)" Clicked="ChangeName_Clicked" HorizontalOptions="Center" FontSize="18" Margin="0,10,0,0" />

        <!-- Кнопка "Выйти" -->
        <Button Text="Выйти" BackgroundColor="LightGray" TextColor="Black" Clicked="Logout_Clicked" CornerRadius="10" Margin="0,20,0,0" />

        <!-- Кнопка "Удалить аккаунт" -->
        <Button Text="Удалить аккаунт" TextColor="Red" Clicked="DeleteAccount_Clicked" Margin="0,10,0,0" />
    </StackLayout>

</ContentPage>
